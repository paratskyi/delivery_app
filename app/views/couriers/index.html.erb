<h1 class="text-center mt-4">Couriers</h1>
<div class="container">
  <% @couriers.each do |courier| %>
    <div class="row justify-content-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to courier.name, courier %>
          </div>
          <div class="card-body">
            <%= link_to "View profile", courier, class: "btn btn-outline-success" %>
            <%= link_to "Edit profile", edit_courier_path(courier), class: "btn btn-outline-info" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= link_to "Create new courier", new_courier_path, class: "dropdown-item" %>
